@model Domain.TbEmployee
@using Domain.Enums

<h2>Edit Employee</h2>

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="mb-3">
        <label>Username</label>
        <input type="text" name="Username" value="@Model.Username" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>New Password (leave blank to keep current)</label>
        <input type="password" name="NewPassword" class="form-control" />

    </div>

    <h4>Permissions</h4>
    <div class="mb-3">
        @foreach (var p in Enum.GetValues(typeof(UserPermissions)))
        {
            if ((int)p == 0) continue;
            var isChecked = Model.Permissions.HasFlag((UserPermissions)p) ? "checked" : "";
            <div class="form-check">
                <input type="checkbox" name="permissions" value="@((int)p)" class="form-check-input" id="@p" @isChecked />
                <label class="form-check-label" for="@p">@p</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary">Cancel</a>
</form>
