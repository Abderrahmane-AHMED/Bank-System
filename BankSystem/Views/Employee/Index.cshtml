@model IEnumerable<Domain.TbEmployee>

<h2>Employees List</h2>

<a href="@Url.Action("Create", "Employee")" class="btn btn-primary">Add Employee</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Username</th>
            <th>Permissions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Username</td>
                <td>@emp.Permissions</td>
                <td>
                    <a href="@Url.Action("Edit", "Employee", new { id = emp.Id })" class="btn btn-sm btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Employee", new { id = emp.Id })" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
