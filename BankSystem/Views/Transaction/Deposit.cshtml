@model Domain.TbClient

<h2>Deposit</h2>

<form asp-action="Deposit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="clientId" value="@Model.ClientId" />

    <div class="form-group">
        <label>Account Number</label>
        <input type="text" value="@Model.AccountNumber" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Current Balance</label>
        <input type="text" value="@Model.Balance" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label for="depositAmount">Amount to Deposit</label>
        <input type="number" step="0.01" name="depositAmount" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success mt-2">Confirm Deposit</button>
    <a asp-action="List" class="btn btn-secondary mt-2">Cancel</a>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
